# Synology NAS Configuration
# Copy this file to .env in your Synology Docker project folder

# Synology NAS IP Address (replace with your actual NAS IP)
SYNOLOGY_IP=192.168.1.100

# Database Configuration
DB_PASSWORD=your_secure_database_password_here

# Redis Configuration (optional password)
REDIS_PASSWORD=your_secure_redis_password_here

# JWT Configuration (MUST CHANGE THESE!)
JWT_SECRET=your-super-secret-jwt-key-that-should-be-at-least-32-characters-long-change-me
JWT_REFRESH_SECRET=your-super-secret-refresh-key-that-should-be-at-least-32-characters-long-change-me

# Encryption Key (MUST CHANGE THIS! - 64 character hex string)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Email Notifications (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# API Keys (Optional - comma separated)
VALID_API_KEYS=your-api-key-1,your-api-key-2

# Logging
LOG_LEVEL=info
