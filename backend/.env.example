# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5433/synology_dashboard"

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6381
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-that-should-be-at-least-32-characters-long
JWT_REFRESH_SECRET=your-super-secret-refresh-key-that-should-be-at-least-32-characters-long
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Encryption Key (64 character hex string)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Server Configuration
PORT=3000
NODE_ENV=development

# Email Notifications (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# API Keys (Optional)
VALID_API_KEYS=

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_INTERVAL=60000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
